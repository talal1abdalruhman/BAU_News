<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baunews">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bau_news_logo_bg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bau_news_logo_bg"
        android:supportsRtl="true"
        android:theme="@style/Theme.BAUNews">
        <activity android:name=".ShowEventsActivity"></activity>
        <activity android:name=".ShowCollegesActivity" />
        <activity android:name=".PdfViewerActivity" />
        <activity android:name=".ShowNewsActivity" />
        <activity android:name=".CreateNewsActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".NotificationPackage.MyFirebaseIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".NotificationPackage.MyFireBaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>