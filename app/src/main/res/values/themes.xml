<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BAUNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/assentsColor</item>
        <item name="colorPrimaryVariant">@color/mainColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="fragment_background">@color/fragmentMain</item>
        <item name="toolbar_background">@color/mainColor</item>
        <item name="FAB_color">@color/deep_green</item>
        <item name="text_color">@color/black</item>
        <item name="text_color_hint">@color/blackColor</item>
        <item name="dialog_bg">@color/mainColor</item>
        <item name="item_background">@color/deep_green</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>