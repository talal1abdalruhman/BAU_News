<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BAUNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/assentsColor</item>
        <item name="colorPrimaryVariant">#191a1c</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fragment_background">#32363d</item>
        <item name="toolbar_background">#191a1c</item>
        <item name="FAB_color">#052b07</item>
        <item name="text_color">@color/offWhite</item>
        <item name="text_color_hint">@color/offWhite</item>
        <item name="dialog_bg">#32363d</item>
        <item name="item_background">@color/black</item>
        <item name="btn_txt_color">@color/black</item>

    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextInputLayoutStyleDrop" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


</resources>